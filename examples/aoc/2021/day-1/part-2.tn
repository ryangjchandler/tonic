use File from "@std/fs"

let input = File.read(__DIR__ + "/input.txt").lines().map(fn (line) {
    return line.toNumber()
})

let result = input.reduce(fn (acc, n, i) {
    let previous = input[i - 1] + n + input[i + 1]
    let current = n + input[i + 1] + input[i + 2]

    if i == 0 {
        return 0
    }

    if current > previous {
        return acc + 1
    }

    return acc
}, 0)

println("Result: " + result)
println("Finished!")